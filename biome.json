{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "lineWidth": 120
    }
  },
  "files": {
    "includes": ["apps/**/*", "packages/**/*"],
    "experimentalScannerIgnores": [
      "**/build/**",
      "**/dist/**",
      "**/.turbo/**",
      "**/node_modules/**",
      "**/tailwind.config.js",
      "**/.react-router/**"
    ]
  }
}
