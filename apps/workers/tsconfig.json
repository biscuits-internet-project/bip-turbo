{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],

    // Language Features
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // Output settings
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true // If you need type declarations
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
