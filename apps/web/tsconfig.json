{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",

    // Language Features
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // React Router specific
    "types": ["node", "vite/client"],
    "rootDirs": [".", "./.react-router/types"],

    // Path aliases
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "@/components/*": ["app/components/*"],
      "@/lib/*": ["app/lib/*"],
      "@/ui/*": ["app/components/ui/*"],
      "@bip/domain/*": ["../../packages/domain/src/*"],
      "@bip/domain": ["../../packages/domain/src"],
      "@bip/core/*": ["../../packages/core/src/*"],
      "@bip/core": ["../../packages/core/src"]
    },

    // Output
    "noEmit": true // Since React Router handles the build
  },
  "include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*", ".react-router/dev/**/*"]
}
