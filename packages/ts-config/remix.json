{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Remix",
    "extends": "./base.json",
    "compilerOptions": {
      "lib": ["DOM", "DOM.Iterable", "ES2022"],
      "allowJs": true,
      "jsx": "react-jsx",
      "moduleResolution": "Bundler",
      "module": "ESNext",
      "target": "ES2022",
      "resolveJsonModule": true
    }
