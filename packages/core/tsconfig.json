{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"], // Might need DOM if using fetch/etc
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@bip/domain/*": ["../domain/src/*"] // If you need path aliases
    }
  },
  "include": ["src"]
}
